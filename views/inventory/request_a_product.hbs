<!-- Site Content -->
<div class="dt-content">

    <!-- Page Header -->
    <div class="dt-page__header">
        <h1 class="dt-page__title">Items In Store</h1>
    </div>
    <!-- /page header -->

    <!-- Grid -->
    <div class="row">

        <!-- Grid Item -->
        <div class="col-xl-12">

            <!-- Entry Header -->
            <div class="dt-entry__header">

                <!-- Entry Heading -->
                <div class="dt-entry__heading">
                    <h3 class="dt-entry__title">Search Items In Store</h3>
                </div>
                <!-- /entry heading -->

            </div>
            <!-- /entry header -->

            <!-- Card -->
            <div class="dt-card">

                <!-- Card Body -->
                <div class="dt-card__body">

                    <!-- Tables -->
                    <div class="table-responsive">

                        <table id="data-table" class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>description</th>
                                <th>Admin Verified</th>
                                <th>Store Verified</th>
                                <th>Audit Verified</th>
                                <th>User Verified</th>
                                <th>Continue Verification</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each products}}
                            <tr class="gradeX">
                                <td>{{this.name}}</td>
                                <td>{{this.description}}</td>
                                <td>{{this.admin_verified}}</td>
                                <td>{{this.store_verified}}</td>
                                <td>{{this.audit_verified}}</td>
                                <td>{{this.user_verified}}</td>
                                <td><a href="/confirmation/{{this._id}}">Continue</a></td>
                            </tr>
                            {{/each}}
                            
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>description</th>
                                <th>Admin Verified</th>
                                <th>Store Verified</th>
                                <th>Audit Verified</th>
                                <th>User Verified</th>
                                    <th>Continue Verification</th>
                            </tr>
                            </tfoot>
                        </table>

                    </div>
                    <!-- /tables -->

                </div>
                <!-- /card body -->

            </div>
            <!-- /card -->

        </div>
        <!-- /grid item -->

    </div>
    <!-- /grid -->

</div>
