<!-- Site Content -->
<div class="dt-content">

    <!-- Page Header -->
    <div class="dt-page__header">
        <h1 class="dt-page__title">Items In Store</h1>
    </div>
    <!-- /page header -->

    <!-- Grid -->
    <div class="row">

        <!-- Grid Item -->
        <div class="col-xl-12">

            <!-- Entry Header -->
            <div class="dt-entry__header">

                <!-- Entry Heading -->
                <div class="dt-entry__heading">
                    <h3 class="dt-entry__title">Search Items In Store</h3>
                </div>
                <!-- /entry heading -->

            </div>
            <!-- /entry header -->

            <!-- Card -->
            <div class="dt-card">

                <!-- Card Body -->
                <div class="dt-card__body">

                    <!-- Tables -->
                    <div class="table-responsive">

                        <table id="data-table" class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>description</th>
                                <th>Units Available</th>
                                <th>Request for this product</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each products}}
                            <tr class="gradeX">
                                <td>{{{jb this}}}</td>
                                <td>{{{jbd this}}}</td>
                                <td>{{this.unit}}</td>                               
                                <td data-toggle="modal" data-target="#modal1">Request for this product</td>
                                 <div class="modal" id="modal1" role="dialog" style="z-index: 100000;">
                                    <div class="modal-dialog modals-default">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            </div>
                                            <form method="POST" action="/request_product">
                                              <div class="modal-body">
                                                  <h2>Enter quantity: {{this.name}}</h2>
                                                  <p><input type="number" name="request_unit" placeholder="{{this.unit}}" min="1" max="{{this.unit}}" class="form-control"></p>
                                                 
                                                    <input type="hidden" name="product_id" value="{{{jbi this}}}">
                                                     <input type="hidden" name="store_id" value="{{this._id}}">
                                                                                 </div>
                                              <div class="modal-footer">
                                                  <button type="submit" class="btn btn-primary">Make Request</button>
                                                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                              </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </tr>
                            {{/each}}
                            
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>description</th>
                                <th>Units Available</th>
                                <th>Request for this product</th>
                            </tr>
                            </tfoot>
                        </table>

                    </div>
                    <!-- /tables -->

                </div>
                <!-- /card body -->

            </div>
            <!-- /card -->

        </div>
        <!-- /grid item -->

    </div>
    <!-- /grid -->

</div>
