 {{#each requests}}
<table  class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th>Requester Name</th>
        <th>Requester Department</th>
        <th>Product Name</th>
        <th>Category Code</th>
        <th>Units Requested For</th>
    </tr>
    </thead>
    {{#each requisitions}}
    <tbody>
    <tr class="gradeX">
       
        <td>{{this.requester_name}}</td>
        <td>{{this.requester_position}}</td>
        <td>{{this.product_name}}</td>
        <td>{{this.category_code}}</td>
        <td>{{this.quantity}}</td>
        <td><button data-toggle="modal" data-target="#mode{{@index}}">Modify</button></td>
            <div class="modal" id="mode{{@index}}" role="dialog" style="z-index: 100000;">
                <div class="modal-dialog modals-default">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <form method="POST" action="/verify_request">
                            <div class="modal-body">     
                                <h2>Previous Comment on Products</h2>
                                {{#each ../this.comment_array}} 
                                    <p>name:{{this.name}}, comment:{{this.comment}}</p>
                                {{/each}}                                        
                                <h2>Modify Quantities for: {{this.product_name}} </h2>
                                <p><input type="hidden" name="requisition_id" value="{{../this._id}}" class="form-control"></p>
                                <input type="hidden" name="obj_index" value="{{@index}}" />
                                <input type="hidden" name="previous_qty" value="{{this.quantity}}" />
                                <p><input type="number" name="quantity" value="{{this.quantity}}" class="form-control"></p>
                                <p><input type="text" name="comment" placeholder="Enter Comment" class="form-control"></p>
                                <p><input type="password" name="passcode" required class="form-control"></p>
                                <p><select name="acceptance" class="form-control">
                                    <option value="accept">Accept</option>
                                    <option value="reject">Reject</option>
                                </select></p>
                                <button type="submit" class="btn btn-primary">Modify</button>
            
                            </div>
                            <div class="modal-footer">
                                
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    </tr>
    </tbody>
    {{/each}}

    <tfoot>
    <tr>
        <th>Name</th>
        <th>Requester Department</th>
        <th>Product Name</th>
        <th>Category Code</th>
        <th>Units Requested For</th>
    </tr>
    </tfoot>
</table>
{{/each}}


